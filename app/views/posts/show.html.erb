<p id="notice"><%= notice %></p>
<div class = "container">

  <div class = "post-author">
          <div class = "avatar">
            <% if @post.user.avatar.attached? %>
              <%= image_tag @post.user.avatar %>
            <% else %>
              <img data-v-5e990434="" src="https://viblo.asia/images/mm.png" srcset="https://viblo.asia/images/mm.png 1x" alt="Avatar" >
            <% end %>
          </div>
          <%= link_to @post.user.email, users_path %>
  </div>

  <h3>
    <%= @post.title %>
  </h3>

  <p>
    <%= @post.content %>
  </p>

  <div class = "image">
    <% if @post.image.attached? %>        <%# check xem co ảnh chưa rồi hien thị ảnh  %>
      <%= image_tag @post.image %>
    <% end %>
  </div>
  <% if user_signed_in? %>
    <% if @post.user_id == current_user.id %>
        <button type="button" class="btn btn-default navbar-btn"> <%= link_to 'Edit', edit_post_path(@post) %></button>
    <% end %>
  <% end %>

  <button type="button" class="btn btn-default navbar-btn"><%= link_to 'Back', posts_path %></button>
 
  

  <%# in cmt %>
  <h2 style = "color: #003C6B">Các bình luận</h2>
  <%= render "comments/comment" %>

    <%# tạo form comment %>
  <h2 style = "color: #003C6B">Viết bình luận</h2>
  <%= form_with model: [ @post, @post.comments.build ] do |form| %>
      
    <div class="form-group">
        <%= form.label :commenter %><br>
        <%= form.text_field :commenter, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= form.label :content %>
        <%= form.text_area :content, class: "form-control", rows: "10" %>
      </div>
      <br>
      <div class="actions">
        <%= form.submit %>
      </div>
  <% end %>


</div>


